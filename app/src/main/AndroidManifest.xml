<?xml version="1.0" encoding="utf-8"?>
<manifest package="jonathan.njcu10stories"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="jonathan.njcu10stories.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="jonathan.njcu10stories.StoryActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="jonathan.njcu10stories.CreditsActivity">
        </activity>
        <activity android:name="jonathan.njcu10stories.StartPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
